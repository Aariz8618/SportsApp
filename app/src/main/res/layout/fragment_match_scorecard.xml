                                android:gravity="center" />

                        </LinearLayout>

                        <!-- Bowling Rows -->
                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/rv_india_bowling"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:nestedScrollingEnabled="false"
                            tools:itemCount="3"
                            tools:listitem="@layout/item_bowling_row" />

                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Australia Innings -->
            <androidx.cardview.widget.CardView
                android:id="@+id/card_australia_innings"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="12dp"
                app:cardElevation="6dp"
                app:cardBackgroundColor="@color/yellow_50">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="24dp"
                    android:background="@drawable/australia_gradient">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="24dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="ðŸ‡¦ðŸ‡º"
                            android:textSize="24sp"
                            android:layout_marginEnd="12dp" />

                        <TextView
                            android:id="@+id/tv_australia_score_header"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Australia - 245/10 (45.0 Ov)"
                            android:textSize="20sp"
                            android:textStyle="bold"
                            android:textColor="@android:color/black" />

                    </LinearLayout>

                    <!-- Batting Table -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <!-- Table Header -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:padding="8dp"
                            android:background="@drawable/table_header_yellow">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="3"
                                android:text="Batsman"
                                android:textStyle="bold"
                                android:textColor="@android:color/black"
                                android:textSize="14sp" />

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="R"
                                android:textStyle="bold"
                                android:textColor="@android:color/black"
                                android:textSize="14sp"
                                android:gravity="center" />

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="B"
                                android:textStyle="bold"
                                android:textColor="@android:color/black"
                                android:textSize="14sp"
                                android:gravity="center" />

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="4s"
                                android:textStyle="bold"
                                android:textColor="@android:color/black"
                                android:textSize="14sp"
                                android:gravity="center" />

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="6s"
                                android:textStyle="bold"
                                android:textColor="@android:color/black"
                                android:textSize="14sp"
                                android:gravity="center" />

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="SR"
                                android:textStyle="bold"
                                android:textColor="@android:color/black"
                                android:textSize="14sp"
                                android:gravity="center" />

                        </LinearLayout>

                        <!-- Batting Rows -->
                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/rv_australia_batting"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:nestedScrollingEnabled="false"
                            tools:itemCount="5"
                            tools:listitem="@layout/item_batting_row" />

                    </LinearLayout>

                    <!-- Bowling Section -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Bowling Figures"
                        android:textStyle="bold"
                        android:textColor="@android:color/black"
                        android:textSize="16sp"
                        android:layout_marginTop="24dp"
                        android:layout_marginBottom="12dp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <!-- Bowling Header -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:padding="8dp"
                            android:background="@drawable/table_header_yellow">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="3"
                                android:text="Bowler"
                                android:textStyle="bold"
                                android:textColor="@android:color/black"
                                android:textSize="14sp" />

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="O"
                                android:textStyle="bold"
                                android:textColor="@android:color/black"
                                android:textSize="14sp"
                                android:gravity="center" />

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="M"
                                android:textStyle="bold"
                                android:textColor="@android:color/black"
                                android:textSize="14sp"
                                android:gravity="center" />

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="R"
                                android:textStyle="bold"
                                android:textColor="@android:color/black"
                                android:textSize="14sp"
                                android:gravity="center" />

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="W"
                                android:textStyle="bold"
                                android:textColor="@android:color/black"
                                android:textSize="14sp"
                                android:gravity="center" />

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Econ"
                                android:textStyle="bold"
                                android:textColor="@android:color/black"
                                android:textSize="14sp"
                                android:gravity="center" />

                        </LinearLayout>

                        <!-- Bowling Rows -->
                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/rv_australia_bowling"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:nestedScrollingEnabled="false"
                            tools:itemCount="3"
                            tools:listitem="@layout/item_bowling_row" />

                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

        </LinearLayout>
    </ScrollView>

    <!-- Loading Indicator -->
    <ProgressBar
        android:id="@+id/progress_loading"
        style="@android:style/Widget.DeviceDefault.Light.ProgressBar.Large"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:visibility="gone" />

</LinearLayout>
