<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Header Section with Image and Basic Info -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            app:cardCornerRadius="20dp"
            app:cardElevation="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/gradient_india"
                android:padding="20dp">

                <!-- Profile Image and Name Section -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <!-- Circular Profile Image -->
                    <androidx.cardview.widget.CardView
                        android:layout_width="120dp"
                        android:layout_height="120dp"
                        android:layout_marginEnd="20dp"
                        app:cardCornerRadius="60dp"
                        app:cardElevation="6dp">

                        <ImageView
                            android:id="@+id/commentatorImage"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:scaleType="centerCrop" />
                    </androidx.cardview.widget.CardView>

                    <!-- Name and Country -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/commentatorName"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Commentator Name"
                            android:textColor="@android:color/white"
                            android:textSize="24sp"
                            android:fontFamily="@font/lato_bold"
                            android:layout_marginBottom="8dp" />

                        <TextView
                            android:id="@+id/commentatorCountry"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/country_badge_white"
                            android:paddingHorizontal="16dp"
                            android:paddingVertical="8dp"
                            android:text="Country"
                            android:textColor="#FF6200EA"
                            android:textSize="16sp"
                            android:fontFamily="@font/lato_bold" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:layout_marginBottom="12dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp"
            app:cardBackgroundColor="@color/card_background">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Born"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/text_primary"
                    android:fontFamily="@font/lato_bold"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:id="@+id/commentatorBorn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Born information"
                    android:textSize="14sp"
                    android:textColor="@color/text_primary"
                    android:fontFamily="@font/lato"
                    android:lineSpacingExtra="4dp" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Education Section -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:layout_marginBottom="12dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp"
            app:cardBackgroundColor="@color/card_background">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Education"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/text_primary"
                    android:fontFamily="@font/lato_bold"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:id="@+id/commentatorEducation"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Education information"
                    android:textSize="14sp"
                    android:textColor="@color/text_primary"
                    android:fontFamily="@font/lato"
                    android:lineSpacingExtra="4dp" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Occupation Section -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:layout_marginBottom="12dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp"
            app:cardBackgroundColor="@color/card_background">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Occupation"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/text_primary"
                    android:fontFamily="@font/lato_bold"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:id="@+id/commentatorOccupation"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Occupation information"
                    android:textSize="14sp"
                    android:textColor="@color/text_primary"
                    android:fontFamily="@font/lato"
                    android:lineSpacingExtra="4dp" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Career Highlights Section -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp"
            app:cardBackgroundColor="@color/card_background">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Career Highlights"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/text_primary"
                    android:fontFamily="@font/lato_bold"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:id="@+id/commentatorHighlights"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Career highlights information"
                    android:textSize="14sp"
                    android:textColor="@color/text_primary"
                    android:fontFamily="@font/lato"
                    android:lineSpacingExtra="4dp" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>
            </LinearLayout>
        </ScrollView>


