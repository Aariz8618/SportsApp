<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="12dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Date and Format Header -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/tvDate"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Date"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="#2196F3" />

            <TextView
                android:id="@+id/tvFormat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TEST"
                android:textSize="12sp"
                android:textStyle="bold"
                android:background="@drawable/format_background"
                android:paddingStart="8dp"
                android:paddingEnd="8dp"
                android:paddingTop="4dp"
                android:paddingBottom="4dp"
                android:textColor="#FFFFFF" />

        </LinearLayout>

        <!-- Series Name -->
        <TextView
            android:id="@+id/tvSeries"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Series Name"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#333333" />

        <!-- Match Description -->
        <TextView
            android:id="@+id/tvMatchDesc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="Match Description"
            android:textSize="14sp"
            android:textColor="#666666" />

        <!-- Divider -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#E0E0E0"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="12dp" />

        <!-- Teams vs Teams -->
        <TextView
            android:id="@+id/tvTeams"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="IND vs AUS"
            android:textSize="18sp"
            android:textStyle="bold"
            android:gravity="center"
            android:textColor="#1976D2" />

        <!-- Venue Details -->
        <TextView
            android:id="@+id/tvVenue"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Venue, City, Country"
            android:textSize="12sp"
            android:gravity="center"
            android:textColor="#666666" />

    </LinearLayout>

</androidx.cardview.widget.CardView>
