<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_light"
    android:orientation="vertical">

    <!-- Content Card -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="16dp"
        android:layout_weight="1"
        app:cardBackgroundColor="@color/card_background"
        app:cardElevation="4dp">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:layout_marginBottom="16dp">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_margin="8dp"
                        android:background="#DEDEDE"
                        android:padding="10dp">

                        <ImageView
                            android:layout_width="150dp"
                            android:layout_height="200dp"
                            android:scaleType="fitCenter"
                            android:src="@drawable/hist_17"
                            android:contentDescription="History of cricket" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/lato_bold"
                            android:gravity="center"
                            android:text="The Sheffield Shield ." />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_margin="8dp"
                        android:background="#DEDEDE"
                        android:padding="10dp">

                        <ImageView
                            android:layout_width="150dp"
                            android:layout_height="200dp"
                            android:scaleType="fitCenter"
                            android:src="@drawable/hist_16"
                            android:contentDescription="History of cricket" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/lato_bold"
                            android:gravity="center"
                            android:text="The Plunkett Shield ." />
                    </LinearLayout>

                </LinearLayout>


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/lato"
                    android:justificationMode="inter_word"
                    android:lineSpacingExtra="4dp"
                    android:padding="10dp"
                    android:text="@string/natchamp"
                    android:textColor="@color/text_primary"
                    android:textSize="16sp" />


                <LinearLayout
                    android:layout_width="180dp"
                    android:layout_height="wrap_content"
                    android:background="#DEDEDE"
                    android:orientation="vertical"
                    android:padding="10dp"
                    android:layout_gravity="center">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        android:layout_marginBottom="10dp"
                        android:scaleType="fitCenter"
                        android:src="@drawable/hist_15"
                        android:contentDescription="History of cricket" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/lato_bold"
                        android:gravity="center"
                        android:text="Ranjitsinhji, after whom the tournament is named" />
                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/lato"
                    android:justificationMode="inter_word"
                    android:lineSpacingExtra="4dp"
                    android:padding="10dp"
                    android:text="@string/natchamp2"
                    android:textColor="@color/text_primary"
                    android:textSize="16sp" />

            </LinearLayout>
        </ScrollView>
    </androidx.cardview.widget.CardView>
</LinearLayout>
