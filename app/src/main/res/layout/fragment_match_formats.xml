<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_light"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">


        <!-- Test Cricket Card -->
        <androidx.cardview.widget.CardView
            android:id="@+id/card_test_cricket"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginBottom="16dp"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?android:attr/selectableItemBackground"
            app:cardCornerRadius="16dp"
            app:cardElevation="6dp">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <!-- Background Image -->
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/testcricket"
                    android:scaleType="centerCrop" />

                <!-- Dark Overlay for better text visibility -->
                <View
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#40000000" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="20dp">

                <!-- Duration Tag -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:background="@drawable/duration_tag_bg"
                    android:paddingHorizontal="12dp"
                    android:paddingVertical="6dp"
                    android:text="5 Days"
                    android:textColor="@color/text_primary"
                    android:textSize="12sp"
                    android:textStyle="bold" />

                <!-- Icon -->
                <ImageView
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="16dp"
                    android:src="@drawable/ic_test_cricket" />

                <!-- Content -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Test Cricket"
                        android:textColor="@color/text_white"
                        android:textSize="24sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:text="Traditional Format"
                        android:textColor="@color/text_white"
                        android:textSize="14sp"
                        android:alpha="0.8" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="The purest form of cricket, played over five days with unlimited overs per innings. Tests the complete skill set of players with emphasis on technique, endurance, and mental strength."
                        android:textColor="@color/text_white"
                        android:textSize="12sp"
                        android:maxLines="3"
                        android:ellipsize="end"
                        android:alpha="0.9" />

                </LinearLayout>

            </LinearLayout>

            </FrameLayout>

        </androidx.cardview.widget.CardView>

        <!-- ODI Cricket Card -->
        <androidx.cardview.widget.CardView
            android:id="@+id/card_odi_cricket"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginBottom="16dp"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?android:attr/selectableItemBackground"
            app:cardCornerRadius="16dp"
            app:cardElevation="6dp">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <!-- Background Image -->
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/oneday"
                    android:scaleType="centerCrop" />

                <!-- Dark Overlay for better text visibility -->
                <View
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#40000000" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="20dp">

                <!-- Duration Tag -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:background="@drawable/duration_tag_bg"
                    android:paddingHorizontal="12dp"
                    android:paddingVertical="6dp"
                    android:text="8 Hours"
                    android:textColor="@color/text_primary"
                    android:textSize="12sp"
                    android:textStyle="bold" />

                <!-- Icon -->
                <ImageView
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="16dp"
                    android:src="@drawable/ic_odi_cricket" />

                <!-- Content -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="One Day International"
                        android:textColor="@color/text_white"
                        android:textSize="22sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:text="ODI - 50 Overs"
                        android:textColor="@color/text_white"
                        android:textSize="14sp"
                        android:alpha="0.8" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="Limited overs cricket played in a single day. Perfect balance between Test cricket's strategy and T20's excitement. Features powerplays and field restrictions."
                        android:textColor="@color/text_white"
                        android:textSize="12sp"
                        android:maxLines="3"
                        android:ellipsize="end"
                        android:alpha="0.9" />

                </LinearLayout>

            </LinearLayout>

            </FrameLayout>

        </androidx.cardview.widget.CardView>

        <!-- T20 Cricket Card -->
        <androidx.cardview.widget.CardView
            android:id="@+id/card_t20_cricket"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginBottom="16dp"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?android:attr/selectableItemBackground"
            app:cardCornerRadius="16dp"
            app:cardElevation="6dp">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <!-- Background Image -->
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/twnety"
                    android:scaleType="centerCrop" />

                <!-- Dark Overlay for better text visibility -->
                <View
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#40000000" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="20dp">

                <!-- Duration Tag -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:background="@drawable/duration_tag_bg"
                    android:paddingHorizontal="12dp"
                    android:paddingVertical="6dp"
                    android:text="3 Hours"
                    android:textColor="@color/text_primary"
                    android:textSize="12sp"
                    android:textStyle="bold" />

                <!-- Icon -->
                <ImageView
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="16dp"
                    android:src="@drawable/ic_t20_cricket" />

                <!-- Content -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Twenty20"
                        android:textColor="@color/text_white"
                        android:textSize="24sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:text="T20 - Fast Cricket"
                        android:textColor="@color/text_white"
                        android:textSize="14sp"
                        android:alpha="0.8" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="The most exciting and explosive format of cricket. Fast-paced action with big hits, innovative shots, and strategic timeouts. Perfect for modern entertainment."
                        android:textColor="@color/text_white"
                        android:textSize="12sp"
                        android:maxLines="3"
                        android:ellipsize="end"
                        android:alpha="0.9" />

                </LinearLayout>

            </LinearLayout>

            </FrameLayout>

        </androidx.cardview.widget.CardView>

        <!-- The Hundred Cricket Card -->
        <androidx.cardview.widget.CardView
            android:id="@+id/card_hundred_cricket"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginBottom="16dp"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?android:attr/selectableItemBackground"
            app:cardCornerRadius="16dp"
            app:cardElevation="6dp">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <!-- Background Image -->
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/hundread"
                    android:scaleType="centerCrop" />

                <!-- Dark Overlay for better text visibility -->
                <View
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#40000000" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="20dp">

                <!-- Duration Tag -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:background="@drawable/duration_tag_bg"
                    android:paddingHorizontal="12dp"
                    android:paddingVertical="6dp"
                    android:text="2.5 Hours"
                    android:textColor="@color/text_primary"
                    android:textSize="12sp"
                    android:textStyle="bold" />

                <!-- Icon -->
                <ImageView
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="16dp"
                    android:src="@drawable/ic_hundred_cricket" />

                <!-- Content -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="The Hundred"
                        android:textColor="@color/text_white"
                        android:textSize="24sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:text="100 Ball Cricket"
                        android:textColor="@color/text_white"
                        android:textSize="14sp"
                        android:alpha="0.8" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="The newest and shortest format designed for maximum entertainment. Each team faces exactly 100 balls with unique rules and faster gameplay than T20."
                        android:textColor="@color/text_white"
                        android:textSize="12sp"
                        android:maxLines="3"
                        android:ellipsize="end"
                        android:alpha="0.9" />

                </LinearLayout>

            </LinearLayout>

            </FrameLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>

</ScrollView>
