<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:layout_marginEnd="10dp"
    android:layout_marginBottom="15dp"
    android:clickable="true"
    android:focusable="true"

    android:foreground="?android:attr/selectableItemBackground"
    app:cardCornerRadius="12dp"
    app:cardElevation="2dp"
    app:cardBackgroundColor="@android:color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="12dp">

        <!-- Header -->
        <TextView
            android:id="@+id/tv_header"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="T20 â€¢ Ind vs Eng"
            android:maxLines="1"
            android:textColor="@color/text_secondary"
            android:textSize="12sp"
            android:layout_marginBottom="8dp" />

        <!-- Team 1 Row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="4dp">

            <!-- Team 1 with flag -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <ImageView
                    android:id="@+id/iv_t1_img"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:background="@drawable/ic_flag"
                    android:layout_marginEnd="6dp" />

                <TextView
                    android:id="@+id/tv_t1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="IND"
                    android:textSize="14sp"
                    android:textColor="@color/text_primary"
                    android:textStyle="bold"
                    android:minWidth="40dp" />
            </LinearLayout>

            <!-- Spacer -->
            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1" />

            <!-- Team 1 Score -->
            <TextView
                android:id="@+id/tv_t1s"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="180/6 (20)"
                android:textSize="14sp"
                android:textColor="@color/score_primary"
                android:fontFamily="monospace" />
        </LinearLayout>

        <!-- Team 2 Row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="8dp">

            <!-- Team 2 with flag -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <ImageView
                    android:id="@+id/iv_t2_img"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:background="@drawable/ic_flag"
                    android:layout_marginEnd="6dp" />

                <TextView
                    android:id="@+id/tv_t2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ENG"
                    android:textSize="14sp"
                    android:textColor="@color/text_primary"
                    android:textStyle="bold"
                    android:minWidth="40dp" />
            </LinearLayout>

            <!-- Spacer -->
            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1" />

            <!-- Team 2 Score -->
            <TextView
                android:id="@+id/tv_t2s"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="170/5 (20)"
                android:textSize="14sp"
                android:textColor="@color/score_secondary"
                android:fontFamily="monospace" />
        </LinearLayout>

        <!-- Status/Result -->
        <TextView
            android:id="@+id/tv_status"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="India won by 10 runs"
            android:textSize="12sp"
            android:maxLines="1"
            android:textColor="@color/text_primary"
            android:layout_marginBottom="6dp"
            android:gravity="center_horizontal" />

        <!-- Footer Schedule Button -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="end">

            <TextView
                android:id="@+id/tv_schedule"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Schedule"
                android:background="@color/winning_team"
                android:textSize="12sp"
                android:textColor="@color/background_dark"
                android:padding="4dp" />
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>