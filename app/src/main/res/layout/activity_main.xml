<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_light"
    tools:context=".MainActivity">

    <!-- Main content area -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <!-- Header -->
        <RelativeLayout
            android:id="@+id/main_header"
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:background="@drawable/header_gradient_bg"
            android:elevation="8dp">

            <ImageView
                android:id="@+id/iv_hamburger_menu"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_menu"
                android:clickable="true"
                android:focusable="true"
                android:padding="8dp"
                android:layout_centerVertical="true"
                android:background="?android:attr/selectableItemBackgroundBorderless"
                android:contentDescription="Menu"
                app:tint="@color/text_white" />

            <TextView
                android:id="@+id/tv_header_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/lato_bold"
                android:gravity="center_horizontal"
                android:letterSpacing="0.05"
                android:text="CricTech"
                android:layout_centerVertical="true"
                android:textColor="@color/text_white"
                android:textSize="24sp"
                android:textStyle="bold" />

        </RelativeLayout>

        <!-- Scrollable content area with proper behavior -->
        <androidx.core.widget.NestedScrollView
            android:id="@+id/home_content"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            app:layout_behavior="@string/appbar_scrolling_view_behavior">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingBottom="80dp">

                <!-- Live Matches Section - Dynamic Scorecards -->
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rv_home_scorecards"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingStart="8dp"
                    android:paddingEnd="8dp"
                    android:clipToPadding="false"
                    android:overScrollMode="never"
                    tools:listitem="@layout/item_home_scorecard" />

                <!-- Gallery Card -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/cv_gallery_card"
                    android:layout_width="match_parent"
                    android:layout_height="220dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp"
                    android:layout_marginBottom="16dp"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="6dp"
                    app:cardBackgroundColor="@color/card_background"
                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="?android:attr/selectableItemBackground">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <FrameLayout
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1">

                            <ImageView
                                android:id="@+id/iv_gallery_photo"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@color/background_light"
                                android:contentDescription="Photo Gallery Image"
                                android:scaleType="centerCrop"
                                android:src="@drawable/photog" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="start|top"
                                android:layout_margin="12dp"
                                android:text="Photo Gallery"
                                android:textSize="14sp"
                                android:textColor="@color/text_white"
                                android:textStyle="bold"
                                android:background="#80000000"
                                android:padding="8dp"
                                android:elevation="2dp" />

                        </FrameLayout>

                        <!-- View More section at bottom -->
                        <LinearLayout
                            android:id="@+id/view"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="end"
                            android:background="@color/background_light"
                            android:paddingVertical="7dp"
                            android:paddingHorizontal="16dp">

                            <TextView
                                android:id="@+id/tv_gallery_view_more"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="View More"
                                android:padding="3dp"
                                android:gravity="end"
                                android:textSize="14sp"
                                android:clickable="true"
                                android:focusable="true"/>

                        </LinearLayout>

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <!-- Highlights Card -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/cv_highlights_card"
                    android:layout_width="match_parent"
                    android:layout_height="220dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp"
                    android:layout_marginBottom="16dp"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="6dp"
                    android:clickable="true"
                    android:focusable="true"
                    app:cardBackgroundColor="@color/card_background">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <FrameLayout
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1">

                            <ImageView
                                android:id="@+id/highlights"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@color/background_light"
                                android:scaleType="centerCrop"
                                android:src="@drawable/wc"
                                android:contentDescription="Highlights" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="start|top"
                                android:layout_margin="12dp"
                                android:text="Highlights"
                                android:textSize="14sp"
                                android:textColor="@color/text_white"
                                android:textStyle="bold"
                                android:background="#80000000"
                                android:padding="8dp"
                                android:elevation="2dp" />

                            <FrameLayout
                                android:id="@+id/nav_bubble_overlay"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:clickable="false"
                                android:clipChildren="false"
                                android:clipToPadding="false"
                                android:focusable="false">

                                <FrameLayout
                                    android:id="@+id/active_nav_bubble"
                                    android:layout_width="64dp"
                                    android:layout_height="64dp"
                                    android:layout_gravity="bottom|start"
                                    android:background="@drawable/bg_nav_active_circle"
                                    android:clickable="false"
                                    android:clipChildren="false"
                                    android:clipToPadding="false"
                                    android:elevation="16dp"
                                    android:focusable="false"
                                    android:translationZ="16dp"
                                    android:visibility="gone">

                                    <ImageView
                                        android:id="@+id/iv_active_nav"
                                        android:layout_width="32dp"
                                        android:layout_height="32dp"
                                        android:layout_gravity="center"
                                        android:clickable="false"
                                        android:contentDescription="ActiveNav"
                                        android:focusable="false"
                                        android:scaleType="centerInside" />

                                </FrameLayout>
                            </FrameLayout>

                        </FrameLayout>

                        <!-- View more section -->
                        <LinearLayout
                            android:id="@+id/hview"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="end"
                            android:background="@color/background_light"
                            android:paddingVertical="7dp"
                            android:paddingHorizontal="16dp">

                            <TextView
                                android:id="@+id/tv_highlights_view_more"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="View More"
                                android:padding="3dp"
                                android:gravity="end"
                                android:textSize="14sp"
                                android:clickable="true"
                                android:focusable="true"
                                android:background="?android:attr/selectableItemBackground" />

                        </LinearLayout>

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <!-- News Card -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/cv_news_card"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp"
                    android:layout_marginBottom="16dp"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="6dp"
                    app:cardBackgroundColor="@color/card_background">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <!-- Header Section -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:padding="16dp"
                            android:paddingBottom="8dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Latest Cricket News"
                                android:textSize="18sp"
                                android:textColor="@color/text_primary"
                                android:textStyle="bold" />

                        </LinearLayout>

                        <!-- News Item 1 -->
                        <LinearLayout
                            android:id="@+id/ll_news_item_1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:padding="12dp"
                            android:paddingTop="8dp"
                            android:clickable="true"
                            android:focusable="true"
                            android:background="?android:attr/selectableItemBackground">

                            <!-- News Image 1 -->
                            <ImageView
                                android:id="@+id/iv_news_image_1"
                                android:layout_width="60dp"
                                android:layout_height="60dp"
                                android:layout_marginEnd="12dp"
                                android:scaleType="centerCrop"
                                android:background="@color/background_light"
                                android:src="@drawable/sai_sudarshan_61"
                                android:contentDescription="Sai Sudarshan 61 runs" />

                            <!-- News Content 1 -->
                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="vertical"
                                android:layout_gravity="center_vertical">

                                <TextView
                                    android:id="@+id/news1"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:ellipsize="end"
                                    android:fontFamily="@font/lato_black"
                                    android:maxLines="2"
                                    android:text="Sai Sudharsan made the opportunity count in his comeback game with a fifty. He looked solid with his approach, but a loose pull shot ended his knock for 61"
                                    android:textColor="@color/text_primary"
                                    android:textSize="14sp"
                                    android:textStyle="bold" />

                                <TextView
                                    android:id="@+id/tv_news_time_1"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="4 h ago"
                                    android:textSize="11sp"
                                    android:textColor="@color/text_secondary"
                                    android:layout_marginTop="4dp" />

                            </LinearLayout>

                        </LinearLayout>

                        <!-- Divider -->
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="@color/background_light"
                            android:layout_marginHorizontal="16dp" />

                        <!-- News Item 2 -->
                        <LinearLayout
                            android:id="@+id/ll_news_item_2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:padding="12dp"
                            android:clickable="true"
                            android:focusable="true"
                            android:background="?android:attr/selectableItemBackground">

                            <!-- News Image 2 -->
                            <ImageView
                                android:id="@+id/iv_news_image_2"
                                android:layout_width="60dp"
                                android:layout_height="60dp"
                                android:layout_marginEnd="12dp"
                                android:scaleType="centerCrop"
                                android:background="@color/background_light"
                                android:src="@drawable/nicholas_pooran"
                                android:contentDescription="Nicholas Pooran" />

                            <!-- News Content 2 -->
                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="vertical"
                                android:layout_gravity="center_vertical">

                                <TextView
                                    android:id="@+id/tv_news_title_2"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="West Indies batsman moves from DSG to MI Cape Town in SA20......"
                                    android:textSize="14sp"
                                    android:textColor="@color/text_primary"
                                    android:textStyle="bold"
                                    android:maxLines="2"
                                    android:ellipsize="end" />

                                <TextView
                                    android:id="@+id/tv_news_time_2"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="7 h ago"
                                    android:textSize="11sp"
                                    android:textColor="@color/text_secondary"
                                    android:layout_marginTop="4dp" />

                            </LinearLayout>

                        </LinearLayout>

                        <!-- Divider -->
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="@color/background_light"
                            android:layout_marginHorizontal="16dp" />

                        <!-- News Item 3 -->
                        <LinearLayout
                            android:id="@+id/ll_news_item_3"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:padding="12dp"
                            android:clickable="true"
                            android:focusable="true"
                            android:background="?android:attr/selectableItemBackground">

                            <!-- News Image 3 -->
                            <ImageView
                                android:id="@+id/iv_news_image_3"
                                android:layout_width="60dp"
                                android:layout_height="60dp"
                                android:layout_marginEnd="12dp"
                                android:scaleType="centerCrop"
                                android:background="@color/background_light"
                                android:src="@drawable/rishu"
                                android:contentDescription="Rishabh Pant Injury" />

                            <!-- News Content 3 -->
                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="vertical"
                                android:layout_gravity="center_vertical">

                                <TextView
                                    android:id="@+id/tv_news_title_3"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="BCCI Breaks Silence On Rishabh Pant's Injury That Forced Him To Retire Hurt vs England: Hit On His Knee"
                                    android:textSize="14sp"
                                    android:textColor="@color/text_primary"
                                    android:textStyle="bold"
                                    android:maxLines="2"
                                    android:ellipsize="end" />

                                <TextView
                                    android:id="@+id/tv_news_time_3"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="8 h ago"
                                    android:textSize="11sp"
                                    android:textColor="@color/text_secondary"
                                    android:layout_marginTop="4dp" />

                            </LinearLayout>

                        </LinearLayout>

                        <!-- View more section -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="end"
                            android:background="@color/background_light"
                            android:paddingVertical="8dp"
                            android:paddingHorizontal="16dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="View All News"
                                android:padding="4dp"
                                android:gravity="end"
                                android:textSize="13sp"
                                android:textColor="@color/text_secondary"
                                android:textStyle="bold" />

                        </LinearLayout>

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <!-- Memes Card -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/cv_memes_card"
                    android:layout_width="match_parent"
                    android:layout_height="220dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp"
                    android:layout_marginBottom="16dp"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="6dp"
                    app:cardBackgroundColor="@color/card_background"
                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="?android:attr/selectableItemBackground">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <FrameLayout
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1">

                            <ImageView
                                android:id="@+id/iv_meme_image"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@color/background_light"
                                android:scaleType="centerCrop"
                                android:src="@drawable/meme"
                                android:contentDescription="Cricket Memes" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="start|top"
                                android:layout_margin="12dp"
                                android:text="Cricket Memes"
                                android:textSize="14sp"
                                android:textColor="@color/text_white"
                                android:textStyle="bold"
                                android:background="#80000000"
                                android:padding="8dp"
                                android:elevation="2dp" />

                        </FrameLayout>

                        <LinearLayout
                            android:id="@+id/mview"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="end"
                            android:background="@color/background_light"
                            android:paddingVertical="7dp"
                            android:paddingHorizontal="16dp">

                            <TextView
                                android:id="@+id/tv_memes_view_more"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="View More"
                                android:padding="3dp"
                                android:gravity="end"
                                android:textSize="14sp"
                                android:clickable="true"
                                android:focusable="true"
                                android:background="?android:attr/selectableItemBackground" />

                        </LinearLayout>

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

            </LinearLayout>

        </androidx.core.widget.NestedScrollView>

        <!-- Fragment Container for navigation fragments -->
        <FrameLayout
            android:id="@+id/fragment_container"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:visibility="gone"
            app:layout_behavior="@string/appbar_scrolling_view_behavior" />

    </LinearLayout>

    <ImageButton
        android:id="@+id/fab_chat"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_gravity="bottom|end"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="84dp"
        android:background="@drawable/fab_logo_background"
        android:src="@drawable/cricmate"
        android:contentDescription="Chatbot"
        android:elevation="8dp"
        android:scaleType="centerCrop"
        android:adjustViewBounds="true"
        android:padding="0dp"/>


    <!-- Enhanced Bottom Navigation -->
    <LinearLayout
        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:orientation="horizontal"
        android:background="@drawable/nav_background"
        android:elevation="12dp"
        android:layout_marginHorizontal="10dp"
        android:layout_marginBottom="10dp"
        android:layout_gravity="bottom"
        android:clipChildren="false"
        android:clipToPadding="false"
        app:layout_behavior="@string/hide_bottom_view_on_scroll_behavior">

        <LinearLayout
            android:id="@+id/ll_nav_home"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:clickable="true"
            android:focusable="true"
            android:clipChildren="false"
            android:clipToPadding="false"
            android:foreground="?android:attr/selectableItemBackground">

            <FrameLayout
                android:id="@+id/fl_nav_home"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:clipChildren="false"
                android:clipToPadding="false">
                <ImageView
                    android:id="@+id/iv_nav_home"
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:src="@drawable/ic_home"
                    android:scaleType="centerInside"
                    android:contentDescription="Home" />
            </FrameLayout>

            <TextView
                android:id="@+id/tv_nav_home"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="HOME"
                android:textSize="10sp"
                android:textColor="#666666"
                android:layout_marginTop="2dp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_nav_news"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:clickable="true"
            android:focusable="true"
            android:clipChildren="false"
            android:clipToPadding="false"
            android:foreground="?android:attr/selectableItemBackground">

            <FrameLayout
                android:id="@+id/fl_nav_news"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:clipChildren="false"
                android:clipToPadding="false">
                <ImageView
                    android:id="@+id/iv_nav_news"
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:src="@drawable/ic_play"
                    android:scaleType="centerInside"
                    android:contentDescription="News" />
            </FrameLayout>

            <TextView
                android:id="@+id/tv_nav_news"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="NEWS"
                android:textSize="10sp"
                android:textColor="#666666"
                android:layout_marginTop="2dp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_nav_rankings"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:clickable="true"
            android:focusable="true"
            android:clipChildren="false"
            android:clipToPadding="false"
            android:foreground="?android:attr/selectableItemBackground">

            <FrameLayout
                android:id="@+id/fl_nav_rankings"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:clipChildren="false"
                android:clipToPadding="false">
                <ImageView
                    android:id="@+id/iv_nav_rankings"
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:src="@drawable/ic_ranking"
                    android:scaleType="centerInside"
                    android:contentDescription="Rankings" />
            </FrameLayout>

            <TextView
                android:id="@+id/tv_nav_rankings"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="RANKINGS"
                android:textSize="10sp"
                android:textColor="#666666"
                android:layout_marginTop="2dp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_nav_more"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:clickable="true"
            android:focusable="true"
            android:clipChildren="false"
            android:clipToPadding="false"
            android:foreground="?android:attr/selectableItemBackground">

            <FrameLayout
                android:id="@+id/fl_nav_schedule"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:clipChildren="false"
                android:clipToPadding="false">
                <ImageView
                    android:id="@+id/iv_nav_schedule"
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:src="@drawable/ic_schedule"
                    android:scaleType="centerInside"
                    android:contentDescription="Schedule" />
            </FrameLayout>

            <TextView
                android:id="@+id/tv_nav_schedule"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="SCHEDULE"
                android:textSize="10sp"
