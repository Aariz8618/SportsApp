<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_light"
    tools:context=".EngOdiFragment">

    <LinearLayout
        android:id="@+id/ll_filter_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/modern_filter_container_bg"
        android:elevation="8dp"
        android:orientation="horizontal"
        android:paddingTop="8dp"
        android:paddingBottom="8dp">

        <LinearLayout
            android:id="@+id/ll_teams_filter_container"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="4dp"
            android:background="@drawable/modern_filter_bg"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/ll_teams_header"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:orientation="horizontal"
                android:gravity="center"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:clickable="true"
                android:focusable="true"
                android:background="@drawable/filter_header_selector">

                <ImageView
                    android:id="@+id/iv_teams_icon"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_teams"
                    android:layout_marginEnd="8dp"
                    android:contentDescription="Teams Icon" />

                <TextView
                    android:id="@+id/tv_teams_header"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Select Team"
                    android:textSize="14sp"
                    android:textColor="@color/filter_text_color"
                    android:textStyle="bold"
                    android:maxLines="1"
                    android:ellipsize="end" />

                <ImageView
                    android:id="@+id/iv_teams_dropdown_arrow"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:src="@drawable/ic_arrow_drop_down"
                    android:contentDescription="Dropdown Arrow" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_format_filter_container"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="4dp"
            android:layout_marginEnd="8dp"
            android:background="@drawable/modern_filter_bg"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/ll_format_header"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:orientation="horizontal"
                android:gravity="center"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:clickable="true"
                android:focusable="true"
                android:background="@drawable/filter_header_selector">

                <ImageView
                    android:id="@+id/iv_format_icon"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_format"
                    android:layout_marginEnd="8dp"
                    android:contentDescription="Format Icon" />

                <TextView
                    android:id="@+id/tv_format_header"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Select Format"
                    android:textSize="14sp"
                    android:textColor="@color/filter_text_color"
                    android:textStyle="bold"
                    android:maxLines="1"
                    android:ellipsize="end" />

                <ImageView
                    android:id="@+id/iv_format_dropdown_arrow"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:src="@drawable/ic_arrow_drop_down"
                    android:contentDescription="Dropdown Arrow" />

            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_teams_dropdown"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@id/ll_filter_container"
        android:layout_alignEnd="@id/ll_filter_container"
        android:layout_below="@id/ll_filter_container"
        android:orientation="vertical"
        android:visibility="gone"
        android:background="@drawable/dropdown_bg"
        android:elevation="12dp"
        tools:visibility="gone">

        <LinearLayout
            android:id="@+id/ll_india"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:orientation="horizontal"
            android:gravity="start|center_vertical"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:clickable="true"
            android:focusable="true"
            android:background="@drawable/dropdown_item_selector">

            <TextView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:text="🇮🇳"
                android:textSize="14sp"
                android:layout_marginEnd="12dp"
                android:gravity="center" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="India"
                android:textSize="14sp"
                android:textColor="@color/dropdown_text_color" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/divider_color"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp" />

        <LinearLayout
            android:id="@+id/ll_australia"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:orientation="horizontal"
            android:gravity="start|center_vertical"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:clickable="true"
            android:focusable="true"
            android:background="@drawable/dropdown_item_selector">

            <TextView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:text="🇦🇺"
                android:textSize="14sp"
                android:layout_marginEnd="12dp"
                android:gravity="center" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Australia"
                android:textSize="14sp"
                android:textColor="@color/dropdown_text_color" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/divider_color"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp" />

        <LinearLayout
            android:id="@+id/ll_england"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:orientation="horizontal"
            android:gravity="start|center_vertical"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:clickable="true"
            android:focusable="true"
            android:background="@drawable/dropdown_item_selector">

            <TextView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:text="🏴󠁧󠁢󠁥󠁮󠁧󠁿"
                android:textSize="14sp"
                android:layout_marginEnd="12dp"
                android:gravity="center" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="England"
                android:textSize="14sp"
                android:textColor="@color/dropdown_text_color" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/divider_color"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp" />

        <LinearLayout
            android:id="@+id/ll_newzealand"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:orientation="horizontal"
            android:gravity="start|center_vertical"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:clickable="true"
            android:focusable="true"
            android:background="@drawable/dropdown_item_selector">

            <TextView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:text="🇳🇿"
                android:textSize="14sp"
                android:layout_marginEnd="12dp"
                android:gravity="center" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="New Zealand"
                android:textSize="14sp"
                android:textColor="@color/dropdown_text_color" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/divider_color"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp" />

        <LinearLayout
