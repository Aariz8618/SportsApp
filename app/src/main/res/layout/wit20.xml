                android:layout_height="wrap_content"
                android:text="T20Is"
                android:textSize="14sp"
                android:textColor="@color/dropdown_text_color" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_filter_actions"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/ll_filter_container"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        android:gravity="end"
        android:orientation="horizontal"
        android:visibility="gone">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_clear_filters"
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            android:text="Clear Filters"
            android:textSize="12sp"
            android:textColor="@color/primary_color"
            android:backgroundTint="@android:color/transparent"
            app:strokeColor="@color/primary_color"
            app:strokeWidth="1dp"
            app:cornerRadius="18dp"
            app:icon="@drawable/ic_clear"
            app:iconSize="16dp"
            app:iconTint="@color/primary_color"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton" />

    </LinearLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/ll_filter_actions"
        android:paddingTop="16dp"
        android:clipToPadding="false">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal">


            <androidx.cardview.widget.CardView
                android:id="@+id/wi_t20_card1"
                android:layout_width="match_parent"
                android:layout_height="220dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="11dp"
                android:layout_marginTop="20dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="12dp"
                android:clickable="true"
                android:focusable="true"
                app:cardBackgroundColor="@color/card_background">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1">

                        <ImageView
                            android:id="@+id/wi_t20_image1"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@drawable/t20wc12"
                            android:background="@color/background_light"
                            android:scaleType="centerCrop"


                            />

                        <TextView
                            android:id="@+id/wi_t20_view1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="bottom|end"
                            android:layout_margin="8dp"
                            android:background="#AA000000"
                            android:padding="8dp"
                            android:text="View All"
                            android:textColor="#FFFFFF"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:clickable="true"
                            android:focusable="true" />

                    </FrameLayout>

                    <!-- Trophy name section -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/background_light"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:paddingHorizontal="16dp"
                        android:paddingVertical="7dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text=" ICC T20 WC 2012"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:gravity="start" />

                    </LinearLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>




            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="220dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="11dp"
                app:cardBackgroundColor="@color/card_background"
                app:cardCornerRadius="12dp"
                app:cardElevation="12dp"
                android:clickable="true"
                android:focusable="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1">

                        <!-- Image that fills the card -->
                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                           android:src="@drawable/wisa24"
                            android:scaleType="centerCrop"
                           />

                        <!--  "Coming Soon"  -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="#80000000"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:visibility="visible">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_margin="8dp"
                                android:background="#AA000000"
                                android:padding="8dp"
                                android:text="Coming Soon"
                                android:textColor="#FFFFFF"
                                android:textSize="16sp"
                                android:textStyle="bold" />

                        </LinearLayout>

                        <TextView
                            android:id="@+id/wi_t20_view2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="bottom|end"
                            android:layout_margin="8dp"
                            android:background="#AA000000"
                            android:padding="8dp"
                            android:text="View All"
                            android:textColor="#FFFFFF"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:clickable="true"
                            android:focusable="true" />


                    </FrameLayout>

                    <!-- trophy name  -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/background_light"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:paddingHorizontal="16dp"
                        android:paddingVertical="7dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="WestIndies VS South Africa 2024 "
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:gravity="start" />



                    </LinearLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>


            <!-- Third card - Normal -->

            <androidx.cardview.widget.CardView
                android:id="@+id/wi_t20_card3"
                android:layout_width="410dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="1dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="12dp"
                app:cardBackgroundColor="@color/white"
                android:layout_gravity="center">

            </androidx.cardview.widget.CardView>


            <!-- album of wi t20 series -->
            <androidx.cardview.widget.CardView
                android:id="@+id/wi_t20_card3_main"
                android:layout_width="match_parent"
                android:layout_height="220dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="11dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="6dp"
                android:clickable="true"
                android:focusable="true"
                app:cardBackgroundColor="@color/card_background">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1">

                        <ImageView
                            android:id="@+id/wi_t20_image3"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@drawable/t20wc16"
                            android:background="@color/background_light"
                            android:scaleType="centerCrop"


                            />

                        <TextView
                            android:id="@+id/wi_t20_view3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="bottom|end"
                            android:layout_margin="8dp"
                            android:background="#AA000000"
                            android:padding="8dp"
                            android:text="View All"
                            android:textColor="#FFFFFF"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:clickable="true"
                            android:focusable="true" />




                    </FrameLayout>

                    <!-- View more section -->
                    <LinearLayout

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/background_light"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:paddingHorizontal="16dp"
                        android:paddingVertical="7dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="ICC T20 WC 2016"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:gravity="start" />


                    </LinearLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- Fourth card - Coming Soon -->


            <!-- coming soon t20 series -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="220dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="11dp"
                app:cardBackgroundColor="@color/card_background"
                app:cardCornerRadius="12dp"
                app:cardElevation="12dp"
                android:clickable="true"
                android:focusable="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1">

                        <!-- Image that fills the card -->
                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                           android:src="@drawable/wieng23"
                            android:scaleType="centerCrop"

                            />

                        <!--  "Coming Soon"  -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="#80000000"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:visibility="visible">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_margin="8dp"
                                android:background="#AA000000"
                                android:padding="8dp"
                                android:text="Coming Soon"
                                android:textColor="#FFFFFF"
                                android:textSize="16sp"
                                android:textStyle="bold" />

                        </LinearLayout>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="bottom|end"
                            android:layout_margin="8dp"
                            android:background="#AA000000"
                            android:padding="8dp"
                            android:text="View All"
                            android:textColor="#FFFFFF"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:clickable="true"
                            android:focusable="true" />

                    </FrameLayout>

                    <!-- View more section -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/background_light"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
