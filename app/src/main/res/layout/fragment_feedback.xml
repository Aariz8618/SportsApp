<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_light">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="30dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:background="@drawable/rounded_edit_text"
            android:paddingVertical="8dp"
            android:paddingLeft="12dp"
            android:layout_marginBottom="12dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_person"
                android:contentDescription="Name"
                android:layout_gravity="center_vertical"
                app:tint="@color/text_primary" />

            <EditText
                android:id="@+id/etFeedbackName"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="Your Name"
                android:fontFamily="@font/lato"
                android:paddingLeft="8dp"
                android:background="@android:color/transparent"
                android:inputType="textPersonName"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:background="@drawable/rounded_edit_text"
            android:paddingVertical="8dp"
            android:paddingLeft="12dp"
            android:layout_marginBottom="12dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_email"
                android:contentDescription="Email"
                android:layout_gravity="center_vertical"
                app:tint="@color/text_primary" />

            <EditText
                android:id="@+id/etFeedbackEmail"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="Email Id"
                android:fontFamily="@font/lato"
                android:paddingLeft="8dp"
                android:background="@android:color/transparent"
                android:inputType="textEmailAddress"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:background="@drawable/rounded_edit_text"
            android:paddingVertical="8dp"
            android:paddingLeft="12dp"
            android:layout_marginBottom="12dp">

            <ImageView
                android:layout_width="25dp"
                android:layout_height="24dp"
                android:src="@drawable/book_1"
                android:contentDescription="Subject"
                android:layout_gravity="center_vertical"
                app:tint="@color/text_primary" />

            <EditText
                android:id="@+id/etFeedbackSubject"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="Subject"
                android:fontFamily="@font/lato"
                android:paddingLeft="8dp"
                android:background="@android:color/transparent"
                android:inputType="text"/>

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Your Feedback"
            android:textSize="16sp"
            android:textColor="@color/text_primary"
            android:paddingLeft="12dp"
            android:paddingBottom="8dp"
            android:layout_marginTop="12dp" />

        <EditText
            android:id="@+id/etFeedbackMessage"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:hint="Within 400 Characters"
            android:fontFamily="@font/lato"
            android:inputType="textMultiLine"
            android:background="@drawable/rounded_edit_text"
            android:padding="12dp"
            android:textColor="@color/text_primary"
            android:maxLines="6"
            android:gravity="top" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rate your experience"
            android:fontFamily="@font/lato_black"
            android:textSize="18sp"
            android:textColor="@color/text_primary"
            android:paddingTop="24dp"
            android:paddingBottom="8dp"
            android:layout_gravity="center_horizontal" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_horizontal"
            android:layout_marginBottom="16dp">

        <!-- Angry Emoji - Rating 1 -->
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnRating1"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:layout_margin="4dp"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:background="@drawable/button_rating_unselected"
            android:text="😡"
            android:textSize="24sp" />

        <!-- Sad Emoji - Rating 2 -->
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnRating2"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:layout_margin="4dp"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:background="@drawable/button_rating_unselected"
            android:text="😔"
            android:textSize="24sp" />

        <!-- Neutral Emoji - Rating 3 -->
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnRating3"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:layout_margin="4dp"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:background="@drawable/button_rating_unselected"
            android:text="😐"
            android:textSize="24sp" />

        <!-- Happy Emoji - Rating 4 -->
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnRating4"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:layout_margin="4dp"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:background="@drawable/button_rating_unselected"
            android:text="🙂"
            android:textSize="24sp" />

        <!-- Heart Eyes Emoji - Rating 5 -->
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnRating5"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:layout_margin="4dp"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:background="@drawable/button_rating_unselected"
            android:text="😍"
            android:textSize="24sp" />
        </LinearLayout>

        <!-- Rating Description Text -->
        <TextView
            android:id="@+id/tvRatingDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/colorPrimary"
            android:gravity="center"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="16dp"
            android:visibility="gone" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnSubmitFeedback"
            android:layout_width="200dp"
            android:layout_height="45dp"
            android:text="SUBMIT"
            android:fontFamily="@font/lato_black"
            android:textSize="16sp"
            android:layout_gravity="center"
            android:textColor="@color/white"
            android:layout_marginTop="8dp"
            android:background="@drawable/rounded_button" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnClearFeedback"
            android:layout_width="200dp"
            android:layout_height="45dp"
            android:text="Clear"
            android:fontFamily="@font/lato_black"
            android:textSize="16sp"
            android:layout_gravity="center"
            android:textColor="@color/white"
            android:layout_marginTop="8dp"
            android:background="@drawable/rounded_button" />
    </LinearLayout>

    </ScrollView>
