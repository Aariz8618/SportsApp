<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_light"
    tools:context=".GalleryFragment">

    <!-- Teams Filter -->
    <LinearLayout
        android:id="@+id/ll_teams_filter_container"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/rounded_filter_bg"
        android:elevation="4dp"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/ll_teams_header"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:padding="10dp"
            android:clickable="true"
            android:focusable="true"
            android:background="?android:attr/selectableItemBackground">

            <TextView
                android:id="@+id/tv_teams_header"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Teams"
                android:textSize="16sp"
                android:textColor="@color/text_primary"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/btn_teams_dropdown"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="▼"
                android:textSize="12sp"
                android:textColor="@color/text_primary"
                android:layout_marginStart="12dp" />

        </LinearLayout>

        <!-- Teams Dropdown List -->
        <LinearLayout
            android:id="@+id/ll_teams_dropdown"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone"
            android:background="@color/background_light">

            <LinearLayout
                android:id="@+id/tv_india"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="start|center_vertical"
                android:padding="12dp"
                android:clickable="true"
                android:focusable="true"
                android:background="?android:attr/selectableItemBackground">

                <TextView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:text="🇮🇳"
                    android:textSize="12sp"
                    android:layout_marginEnd="8dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="India"
                    android:fontFamily="@font/lato"
                    android:textSize="14sp"
                    android:textColor="@color/text_primary" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/tv_australia"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="start|center_vertical"
                android:padding="12dp"
                android:clickable="true"
                android:focusable="true"
                android:background="?android:attr/selectableItemBackground">

                <TextView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:text="🇦🇺"
                    android:textSize="12sp"
                    android:layout_marginEnd="8dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Australia"
                    android:textSize="14sp"
                    android:textColor="@color/text_primary" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/tv_england"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="start|center_vertical"
                android:padding="12dp"
                android:clickable="true"
                android:focusable="true"
                android:background="?android:attr/selectableItemBackground">

                <TextView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:text="🏴󠁧󠁢󠁥󠁮󠁧󠁿"
                    android:textSize="12sp"
                    android:layout_marginEnd="8dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="England"
                    android:textSize="14sp"
                    android:textColor="@color/text_primary" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/tv_newzealand"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="start|center_vertical"
                android:padding="12dp"
                android:clickable="true"
                android:focusable="true"
                android:background="?android:attr/selectableItemBackground">

                <TextView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:text="🇳🇿"
                    android:textSize="12sp"
                    android:layout_marginEnd="8dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="New Zealand"
                    android:textSize="14sp"
                    android:textColor="@color/text_primary" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/tv_westindies"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="start|center_vertical"
                android:padding="12dp"
                android:clickable="true"
                android:focusable="true"
                android:background="?android:attr/selectableItemBackground">

                <TextView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:text="🏏"
                    android:textSize="12sp"
                    android:layout_marginEnd="8dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="West Indies"
                    android:textSize="14sp"
                    android:textColor="@color/text_primary" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <!-- Format Filter -->
    <LinearLayout
        android:id="@+id/ll_format_filter_container"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/ll_teams_filter_container"
        android:layout_marginStart="80dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/rounded_filter_bg"
        android:elevation="4dp"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/ll_format_header"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:padding="10dp"
            android:clickable="true"
            android:focusable="true"
            android:background="?android:attr/selectableItemBackground">

            <TextView
                android:id="@+id/tv_format_header"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Format"
                android:textSize="16sp"
                android:textColor="@color/text_primary"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/btn_format_dropdown"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="▼"
                android:textSize="12sp"
                android:textColor="@color/text_primary"
                android:layout_marginStart="12dp" />

        </LinearLayout>

        <!-- Format Dropdown List -->
        <LinearLayout
            android:id="@+id/ll_format_dropdown"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone"
            android:background="@color/background_light">

            <TextView
                android:id="@+id/tv_test"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Test"
                android:textSize="14sp"
                android:textColor="@color/text_primary"
                android:padding="12dp"
                android:clickable="true"
                android:focusable="true"
                android:background="?android:attr/selectableItemBackground" />

            <TextView
                android:id="@+id/tv_odi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ODI"
                android:textSize="14sp"
                android:textColor="@color/text_primary"
                android:padding="12dp"
                android:clickable="true"
                android:focusable="true"
                android:background="?android:attr/selectableItemBackground" />

            <TextView
                android:id="@+id/tv_t20"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="T20Is"
                android:textSize="14sp"
                android:textColor="@color/text_primary"
                android:padding="12dp"
                android:clickable="true"
                android:focusable="true"
                android:background="?android:attr/selectableItemBackground" />

        </LinearLayout>

    </LinearLayout>


    <!-- Scrollable content area (below the filter) -->
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingTop="80dp"
        android:clipToPadding="false">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="20dp">

            <!-- Photo Gallery Section Title -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="start|center_vertical"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="12dp"
                android:paddingStart="16dp"
                android:paddingEnd="12dp">

                <androidx.cardview.widget.CardView
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_marginEnd="12dp"
                    app:cardCornerRadius="300dp"
                    app:cardElevation="2dp">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:contentDescription="Gallery Icon"
                        android:scaleType="centerCrop"
                        android:src="@drawable/pgallery" />

                </androidx.cardview.widget.CardView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Photo Gallery"
                    android:textColor="@color/text_primary"
                    android:textSize="20sp"
                    android:textStyle="bold" />

            </LinearLayout>


            <androidx.cardview.widget.CardView
                android:id="@+id/ctindia"
                android:layout_width="match_parent"
                android:layout_height="220dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="11dp"
                android:layout_marginTop="5dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="12dp"
                android:clickable="true"
                android:focusable="true"
                app:cardBackgroundColor="@color/card_background">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@drawable/ct0"
                            android:background="@color/background_light"
                            android:scaleType="centerCrop"

                            />

                        <TextView
                            android:id="@+id/ctview"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="bottom|end"
                            android:layout_margin="8dp"
                            android:background="#AA000000"
                            android:padding="8dp"
                            android:text="View All"
                            android:textColor="#FFFFFF"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:clickable="true"
                            android:focusable="true" />

                    </FrameLayout>

                    <!-- Trophy name section -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/background_light"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:paddingHorizontal="16dp"
                        android:paddingVertical="7dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text=" CHAMPIONS TROPHY 2025 "
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:gravity="start" />

                    </LinearLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>


            <androidx.cardview.widget.CardView
                android:id="@+id/wtc25"
                android:layout_width="match_parent"
                android:layout_height="220dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="11dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="12dp"
                android:clickable="true"
                android:focusable="true"
                app:cardBackgroundColor="@color/card_background">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@drawable/sawtc0"
                            android:background="@color/background_light"
                            android:scaleType="centerCrop"

                            />

                        <TextView
                            android:id="@+id/wtcview"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="bottom|end"
                            android:layout_margin="8dp"
                            android:background="#AA000000"
                            android:padding="8dp"
                            android:text="View All"
                            android:textColor="#FFFFFF"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:clickable="true"
                            android:focusable="true" />

                    </FrameLayout>

                    <!-- Trophy name section -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/background_light"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:paddingHorizontal="16dp"
                        android:paddingVertical="7dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="WTC 2025 "
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:gravity="start" />

                    </LinearLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>


            <androidx.cardview.widget.CardView
                android:id="@+id/indvseng"
                android:layout_width="match_parent"
                android:layout_height="220dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="11dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="12dp"
                android:clickable="true"
                android:focusable="true"
                app:cardBackgroundColor="@color/card_background">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@drawable/draw0"
                            android:background="@color/background_light"
                            android:scaleType="centerCrop"

                            />

                        <TextView
                            android:id="@+id/inenggview"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="bottom|end"
                            android:layout_margin="8dp"
                            android:background="#AA000000"
                            android:padding="8dp"
                            android:text="View All"
                            android:textColor="#FFFFFF"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:clickable="true"
                            android:focusable="true" />

                    </FrameLayout>

                    <!-- Trophy name section -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/background_light"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:paddingHorizontal="16dp"
                        android:paddingVertical="7dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text=" ANDERSON-TENDULKAR TROPHY 2025"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:gravity="start" />

                    </LinearLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/auswi"
                android:layout_width="match_parent"
                android:layout_height="220dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="11dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="12dp"
                android:clickable="true"
                android:focusable="true"
                app:cardBackgroundColor="@color/card_background">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@drawable/auswi0"
                            android:background="@color/background_light"
                            android:scaleType="centerCrop"

                            />

                        <TextView
                            android:id="@+id/auwiview"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="bottom|end"
                            android:layout_margin="8dp"
                            android:background="#AA000000"
                            android:padding="8dp"
                            android:text="View All"
                            android:textColor="#FFFFFF"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:clickable="true"
                            android:focusable="true" />

                    </FrameLayout>

                    <!-- Trophy name section -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/background_light"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:paddingHorizontal="16dp"
                        android:paddingVertical="7dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="AUSTRALIA VA WEST-INDIES "
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:gravity="start" />

                    </LinearLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</RelativeLayout>
