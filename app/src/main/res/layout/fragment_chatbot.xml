<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/background_gradient">

    <!-- Enhanced Header with gradient and shadow -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="24dp"
        android:paddingTop="32dp"
        android:background="@drawable/header_gradient_background"
        android:elevation="8dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_centerVertical="true">

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="🏏 CricChat"
                android:textColor="@android:color/white"
                android:textSize="24sp"
                android:textStyle="bold"
                android:fontFamily="@font/lato_black"
                android:letterSpacing="0.02"
                android:shadowColor="#40000000"
                android:shadowDx="0"
                android:shadowDy="2"
                android:shadowRadius="4" />

            <TextView
                android:id="@+id/tv_subtitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:text="Your Ultimate Cricket Assistant"
                android:textColor="@android:color/white"
                android:textSize="13sp"
                android:alpha="0.92"
                android:fontFamily="@font/lato_bold"
                android:letterSpacing="0.01" />
        </LinearLayout>

        <!-- Enhanced status indicator with pulse animation -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Online"
                android:textColor="@android:color/white"
                android:textSize="11sp"
                android:alpha="0.9"
                android:layout_marginEnd="8dp"
                android:fontFamily="@font/lato_bold" />

            <View
                android:id="@+id/status_indicator"
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:background="@drawable/status_indicator_background"
                android:elevation="2dp" />
        </LinearLayout>
    </RelativeLayout>

    <!-- Messages list with enhanced background -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_chat"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@drawable/chat_background"
        android:clipToPadding="false"
        android:paddingLeft="16dp"
        android:paddingTop="16dp"
        android:paddingRight="16dp"
        android:paddingBottom="104dp"
        android:scrollbarStyle="outsideOverlay"
        android:scrollbarThumbVertical="@drawable/scrollbar_thumb"
        android:fadeScrollbars="false" />

    <!-- Enhanced input area with modern design -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="20dp"
        android:paddingBottom="24dp"
        android:gravity="center_vertical"
        android:background="@drawable/input_area_background"
        android:elevation="12dp">

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/til_input"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginEnd="12dp"
            app:boxBackgroundMode="filled"
            app:boxBackgroundColor="@color/input_background"
            app:boxCornerRadiusTopStart="28dp"
            app:boxCornerRadiusTopEnd="28dp"
            app:boxCornerRadiusBottomStart="28dp"
            app:boxCornerRadiusBottomEnd="28dp"
            app:boxStrokeColor="@color/input_stroke_selector"
            app:boxStrokeWidth="1dp"
            app:boxStrokeWidthFocused="2dp"
            app:hintEnabled="false"
            app:startIconDrawable="@null"
            app:endIconMode="none"
            android:elevation="2dp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/et_input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Ask about cricket matches, players, stats..."
                android:paddingStart="20dp"
                android:paddingEnd="20dp"
                android:paddingTop="16dp"
                android:paddingBottom="16dp"
                android:background="@null"
                android:imeOptions="actionSend"
                android:inputType="textCapSentences"
                android:maxLines="4"
                android:minHeight="52dp"
                android:textSize="15sp"
                android:textColor="@color/text_primary"
                android:textColorHint="@color/text_hint"
                android:fontFamily="@font/lato"
                android:lineSpacingExtra="2dp" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Enhanced send button with gradient -->
        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/btn_send"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:backgroundTint="@color/fab_gradient_end"
            app:srcCompat="@drawable/ic_send_enhanced"
            app:tint="@android:color/white"
            app:fabSize="normal"
            app:useCompatPadding="false"
            app:elevation="6dp"
            app:pressedTranslationZ="12dp"
            app:rippleColor="@color/fab_ripple"
            android:scaleType="center"
            android:background="@drawable/fab_gradient_background" />
    </LinearLayout>

</LinearLayout>