<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_light"
    tools:context=".HighlightsFragment">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Search Bar -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@drawable/bg_chat_bot_black_orange"
                android:padding="8dp"
                android:clipToPadding="false"
                android:layout_marginBottom="12dp"
                android:backgroundTintMode="src_over"
                android:alpha="0.95">

                <ImageButton
                    android:id="@+id/btnSearch"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_gravity="center"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="2dp"
                    android:background="@drawable/ic_search"
                    android:contentDescription="Search"
                    app:tint="@android:color/white" />

                <EditText
                    android:id="@+id/etSearch"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_weight="1"
                    android:hint="Search Finals, Key moments..."
                    android:paddingStart="8dp"
                    android:textColorHint="@color/text_secondary"
                    android:textColor="@color/white"
                    android:background="@android:color/transparent" />

            </LinearLayout>

            <!-- ViewPager2 for Highlights Carousel -->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="280dp"
                android:layout_marginBottom="16dp"
                app:layout_constrainedHeight="true">

                <androidx.viewpager2.widget.ViewPager2
                    android:id="@+id/viewPagerHighlights"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent" />

                <LinearLayout
                    android:id="@+id/indicatorContainer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:layout_margin="8dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Record Breakers"
                    android:textStyle="bold"
                    android:textColor="@color/text_primary"
                    android:textSize="16sp"
                    android:layout_marginBottom="8dp" />

            <!-- Other Shows (2 cards) -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvOtherShows"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:overScrollMode="never"
                android:nestedScrollingEnabled="false"
                android:layout_marginBottom="16dp" />


            <!-- Most Trending -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="World Cup Finals"
                android:textStyle="bold"
                android:textColor="@color/text_primary"
                android:textSize="16sp"
                android:layout_marginBottom="8dp" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvTrendingShows"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:overScrollMode="never"
                android:nestedScrollingEnabled="false"
                android:layout_marginBottom="16dp" />

            <!-- Best Choices -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="IPL Finals"
                android:textStyle="bold"
                android:textColor="@color/text_primary"
                android:textSize="16sp"
                android:layout_marginBottom="8dp" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvBestChoices"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:overScrollMode="never"
                android:nestedScrollingEnabled="false"
                android:layout_marginBottom="16dp" />

            <!-- Billionaire Romance -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Epic Performances"
                android:textStyle="bold"
                android:textColor="@color/text_primary"
                android:textSize="16sp"
                android:layout_marginBottom="8dp" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvBillionaire"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:overScrollMode="never"
                android:nestedScrollingEnabled="false"
                android:layout_marginBottom="16dp" />

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>