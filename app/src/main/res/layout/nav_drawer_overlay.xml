                </LinearLayout>

                </LinearLayout>

                <!-- Beyond the Field Section -->
                <LinearLayout
                    android:id="@+id/nav_item_beyond_field"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
