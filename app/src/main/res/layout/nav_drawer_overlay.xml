                        android:layout_height="24dp"
                        android:src="@android:drawable/ic_menu_help"
                        android:layout_marginEnd="16dp"
                        app:tint="@color/text_primary"
                        android:contentDescription="Help and Support Icon" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Help and Support"
                        android:fontFamily="@font/lato_bold"
                        android:textColor="@color/text_primary"
                        android:textSize="16sp" />

                </LinearLayout>

                <!-- Privacy Policy -->
                <LinearLayout
                    android:id="@+id/nav_item_privacy_policy"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:paddingHorizontal="20dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:background="?android:attr/selectableItemBackground">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/img_19"
                        android:layout_marginEnd="16dp"
                        app:tint="@null"
                        android:contentDescription="Privacy Policy Icon" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Privacy Policy"
                        android:fontFamily="@font/lato_bold"
                        android:textColor="@color/text_primary"
                        android:textSize="16sp" />

                </LinearLayout>

                <!-- Terms of Service -->
                <LinearLayout
                    android:id="@+id/nav_item_terms_service"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:paddingHorizontal="20dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:background="?android:attr/selectableItemBackground">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/img_18"
                        android:layout_marginEnd="16dp"
                        app:tint="@null"
                        android:contentDescription="Terms of Service Icon" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Terms and Conditions"
                        android:fontFamily="@font/lato_bold"
                        android:textColor="@color/text_primary"
                        android:textSize="16sp" />

                </LinearLayout>

                <!-- Report Issue -->
                <LinearLayout
                    android:id="@+id/nav_item_report_issue"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:paddingHorizontal="20dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:background="?android:attr/selectableItemBackground">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/img_20"
                        android:layout_marginEnd="16dp"
                        app:tint="@color/text_primary"
                        android:contentDescription="Report Issue Icon" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Report Issue"
                        android:fontFamily="@font/lato_bold"
                        android:textColor="@color/text_primary"
                        android:textSize="16sp" />

                </LinearLayout>

                <!-- Feedback -->
                <LinearLayout
                    android:id="@+id/nav_item_feedback"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:paddingHorizontal="20dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:background="?android:attr/selectableItemBackground">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@android:drawable/ic_menu_send"
                        android:layout_marginEnd="16dp"
                        app:tint="@color/text_primary"
                        android:contentDescription="Feedback Icon" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Feedback"
                        android:fontFamily="@font/lato_bold"
                        android:textColor="@color/text_primary"
                        android:textSize="16sp" />

                </LinearLayout>

            </LinearLayout>

        </ScrollView>
        

    </LinearLayout>

    <!-- Transparent overlay (20% width) - clicking here closes the drawer -->
    <View
        android:id="@+id/nav_drawer_background"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="0.2"
        android:background="@android:color/transparent"
        android:clickable="true"
        android:focusable="true" />

</LinearLayout>
