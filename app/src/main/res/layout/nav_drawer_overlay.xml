                        android:layout_weight="1"
                        android:text="Teams"
                        android:fontFamily="@font/lato_bold"
                        android:textColor="@color/text_primary"
                        android:textSize="16sp" />

                </LinearLayout>

                <!-- Cricket Basics Section -->
