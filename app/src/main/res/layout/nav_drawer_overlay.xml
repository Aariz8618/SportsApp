                    android:background="?android:attr/selectableItemBackground">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/img_10"
                        android:layout_marginEnd="16dp"
                        app:tint="@null"
                        android:contentDescription="Fielding Positions" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Fielding positions"
                        android:fontFamily="@font/lato"
                        android:textColor="@color/text_primary"
                        android:textSize="14sp" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/nav_item_strategy_tactics"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:paddingHorizontal="40dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:background="?android:attr/selectableItemBackground">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/img_11"
                        android:layout_marginEnd="16dp"
                        app:tint="@null"
                        android:contentDescription="Strategy and tactics" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Strategy and tactics"
                        android:fontFamily="@font/lato"
                        android:textColor="@color/text_primary"
                        android:textSize="14sp" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/nav_item_tournaments_leagues"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:paddingHorizontal="40dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:background="?android:attr/selectableItemBackground">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/img_12"
                        android:layout_marginEnd="16dp"
                        app:tint="@null"
                        android:contentDescription="Tournaments and leagues" />

                    <TextView
                        android:layout_width="0dp"
