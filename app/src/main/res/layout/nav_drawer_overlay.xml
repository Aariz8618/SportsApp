<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/nav_drawer_overlay"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:visibility="gone"
    android:background="#80000000"
    android:elevation="20dp">

    <!-- Navigation Drawer (80% width) -->
    <LinearLayout
        android:id="@+id/nav_drawer_content"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="0.8"
        android:background="@color/card_background"
        android:orientation="vertical"
        android:elevation="24dp">

        <!-- Header Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:padding="20dp"
            android:background="@drawable/header_gradient_bg">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_arrow_back"
                android:layout_marginEnd="16dp"
                app:tint="@color/text_white"
                android:contentDescription="Menu Icon" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="CricTech"
                    android:textColor="@color/text_white"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Your Cricket Companion"
                    android:fontFamily="@font/lato_bold"
                    android:textColor="@color/text_white"
                    android:textSize="12sp"
                    android:alpha="0.8" />

            </LinearLayout>

        </LinearLayout>

        <!-- Menu Items -->
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingTop="16dp">

                <!-- Search Bar -->
                <LinearLayout
                    android:id="@+id/nav_item_search_bar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:paddingHorizontal="20dp"
                    android:paddingVertical="8dp">

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        app:cardCornerRadius="20dp"
                        app:cardElevation="2dp"
                        app:cardBackgroundColor="@color/background_light">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:paddingHorizontal="16dp">

                            <ImageView
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:src="@android:drawable/ic_menu_search"
                                android:layout_marginEnd="12dp"
                                app:tint="@color/text_secondary"
                                android:contentDescription="Search Icon" />

                            <EditText
                                android:id="@+id/et_nav_search"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:background="@android:color/transparent"
                                android:hint="Search menu items..."
                                android:textColorHint="@color/text_secondary"
                                android:textColor="@color/text_primary"
                                android:textSize="14sp"
                                android:inputType="text"
                                android:imeOptions="actionSearch"
                                android:maxLines="1" />

                            <ImageView
                                android:id="@+id/iv_clear_search"
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:src="@android:drawable/ic_menu_close_clear_cancel"
                                android:layout_marginStart="8dp"
                                android:visibility="gone"
                                android:clickable="true"
                                android:focusable="true"
                                android:background="?android:attr/selectableItemBackgroundBorderless"
                                app:tint="@color/text_secondary"
                                android:contentDescription="Clear Search Icon" />

                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                </LinearLayout>

                <!-- Player Comparison -->
                <LinearLayout
                    android:id="@+id/nav_item_player_comparison"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:paddingHorizontal="20dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:background="?android:attr/selectableItemBackground">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/img_17"
                        android:layout_marginEnd="16dp"
                        app:tint="@color/text_primary"
                        android:contentDescription="Player Comparison Icon" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Player Comparison"
                        android:fontFamily="@font/lato_bold"
                        android:textColor="@color/text_primary"
                        android:textSize="16sp" />

                </LinearLayout>

                <!-- Browse Players -->
                <LinearLayout
                    android:id="@+id/nav_item_browse_players"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:paddingHorizontal="20dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:background="?android:attr/selectableItemBackground">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@android:drawable/ic_menu_agenda"
                        android:layout_marginEnd="16dp"
                        app:tint="@color/text_primary"
                        android:contentDescription="Browse Players Icon" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Browse Players"
                        android:fontFamily="@font/lato_bold"
                        android:textColor="@color/text_primary"
                        android:textSize="16sp" />

                </LinearLayout>

                <!-- Browse Matches -->
                <LinearLayout
                    android:id="@+id/nav_item_browse_matches"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:paddingHorizontal="20dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:background="?android:attr/selectableItemBackground">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@android:drawable/ic_menu_today"
                        android:layout_marginEnd="16dp"
                        app:tint="@color/text_primary"
                        android:contentDescription="Browse Matches Icon" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Browse Matches"
                        android:fontFamily="@font/lato_bold"
                        android:textColor="@color/text_primary"
                        android:textSize="16sp" />

                </LinearLayout>

                <!-- Teams -->
