<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F8F9FA"
    android:padding="24dp">

    <!-- Main Content Container -->
    <androidx.cardview.widget.CardView
        android:id="@+id/cv_placeholder_container"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        app:cardCornerRadius="16dp"
        app:cardElevation="2dp"
        app:cardBackgroundColor="@android:color/white"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:id="@+id/ll_content_wrapper"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="32dp">

            <!-- Icon Container -->
            <View
                android:id="@+id/v_icon_placeholder"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:background="@drawable/ic_scorecard_placeholder"
                android:layout_marginBottom="24dp"/>

            <!-- Title -->
            <TextView
                android:id="@+id/tv_placeholder_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Scorecard Currently Not Available"
                android:textStyle="bold"
                android:textSize="20sp"
                android:textColor="#1F2937"
                android:gravity="center"
                android:lineSpacingMultiplier="1.2"
                android:layout_marginBottom="8dp"/>

            <!-- Subtitle -->
            <TextView
                android:id="@+id/tv_placeholder_subtitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="We're working on getting the scorecard ready."
                android:textColor="#6B7280"
                android:textSize="14sp"
                android:gravity="center"
                android:lineSpacingMultiplier="1.4"
                android:layout_marginBottom="24dp"/>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>