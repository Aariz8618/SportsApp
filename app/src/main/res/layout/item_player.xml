<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="4dp"
    android:background="@color/card_background"
    android:foreground="?android:attr/selectableItemBackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:gravity="center_vertical">

        <!-- Player Image -->
        <androidx.cardview.widget.CardView
            android:layout_width="64dp"
            android:layout_height="64dp"
            app:cardCornerRadius="32dp"
            app:cardElevation="2dp">

            <ImageView
                android:id="@+id/iv_player_image"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_team_placeholder"
                android:contentDescription="Player Photo" />

        </androidx.cardview.widget.CardView>

        <!-- Player Details -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="16dp"
            android:orientation="vertical">

            <!-- Player Name -->
            <TextView
                android:id="@+id/tv_player_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/text_primary"
                android:textSize="18sp"
                android:textStyle="bold"
                android:maxLines="1"
                android:ellipsize="end"
                tools:text="Virat Kohli" />

            <!-- Country -->
            <TextView
                android:id="@+id/tv_player_country"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:textColor="@color/text_secondary"
                android:textSize="14sp"
                android:drawablePadding="4dp"
                android:gravity="center_vertical"
                tools:text="India" />

            <!-- Position -->
            <TextView
                android:id="@+id/tv_player_position"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:textColor="@color/text_secondary"
                android:textSize="12sp"
                android:background="@drawable/match_card_background"
                android:paddingHorizontal="8dp"
                android:paddingVertical="2dp"
                tools:text="Batsman" />

            <!-- Playing Style -->
            <TextView
                android:id="@+id/tv_player_style"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:textColor="@color/text_secondary"
                android:textSize="12sp"
                tools:text="Right Handed Bat • Right Arm Medium" />

            <!-- Career Stats -->
            <TextView
                android:id="@+id/tv_player_stats"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:textColor="@color/text_primary"
                android:textSize="12sp"
                android:textStyle="bold"
                tools:text="Runs: 12500 • Avg: 52.37 • Wickets: 4 • Avg: 166.25" />

        </LinearLayout>

        <!-- Chevron -->
        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_arrow_drop_down"
            android:rotation="270"
            app:tint="@color/text_secondary"
            android:contentDescription="View Player Details" />

    </LinearLayout>

</androidx.cardview.widget.CardView>
