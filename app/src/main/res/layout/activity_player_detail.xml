<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <ImageView
            android:id="@+id/ivPlayerImage"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_player_placeholder" />

        <TextView
            android:id="@+id/tvPlayerName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Player Name"
            android:textSize="20sp"
            android:textStyle="bold"
            android:paddingTop="8dp" />

        <TextView
            android:id="@+id/tvPlayerRole"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Role" />

        <TextView
            android:id="@+id/tvBattingStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Batting Style" />

        <TextView
            android:id="@+id/tvBowlingStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bowling Style" />

        <TextView
            android:id="@+id/tvCountry"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Country" />

        <!-- Stats Section -->
        <TextView
            android:id="@+id/tvMatches"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Matches: " />

        <TextView
            android:id="@+id/tvRuns"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Runs: " />

        <TextView
            android:id="@+id/tvWickets"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Wickets: " />

        <TextView
            android:id="@+id/tvAverage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Average: " />

    </LinearLayout>
</ScrollView>
