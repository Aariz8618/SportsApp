<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f5f5f5">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <!-- Tabs: Summary | Scorecard -->
        <com.google.android.material.tabs.TabLayout
            android:id="@+id/tab_navigation"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:tabIndicatorFullWidth="false"
            app:tabIndicatorColor="@color/button_1"
            app:tabSelectedTextColor="@android:color/black"
            app:tabTextColor="@android:color/darker_gray"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent">
            <com.google.android.material.tabs.TabItem
                android:id="@+id/tab_summary"
                android:text="Summary" />
            <com.google.android.material.tabs.TabItem
                android:id="@+id/tab_scorecard"
                android:text="Scorecard" />
        </com.google.android.material.tabs.TabLayout>

        <!-- Match Status Card -->
        <androidx.cardview.widget.CardView
            android:id="@+id/card_match_status"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="12dp"
            app:cardElevation="8dp"
            app:cardBackgroundColor="@android:color/white"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tab_navigation">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp"
                android:gravity="center"
                android:background="@drawable/header_gradient">

                <TextView
                    android:id="@+id/tv_match_status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="LIVE"
                    android:textStyle="bold"
                    android:textColor="@android:color/white"
                    android:textSize="18sp"
                    android:background="@drawable/status_chip_live"
                    android:paddingHorizontal="14dp"
                    android:paddingVertical="6dp"
                    tools:text="Completed" />

                <TextView
                    android:id="@+id/tv_series_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="India vs Australia Test Series"
                    android:textSize="15sp"
                    android:textColor="@android:color/white"
                    android:textStyle="bold"
                    tools:text="India vs Australia Test Series" />

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:id="@+id/ll_match_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="12dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/card_match_status"
            app:layout_constraintHorizontal_chainStyle="packed">

            <TextView
                android:id="@+id/tv_match_team1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="India"
                android:layout_weight="1"
                android:gravity="start|center_vertical"
                android:textSize="24sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_vs"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" vs "
                android:textSize="24sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_match_team2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Australia"
                android:layout_weight="1"
                android:gravity="end|center_vertical"
                android:textSize="24sp"
                android:textStyle="bold" />


        </LinearLayout>

        <TextView
            android:id="@+id/tv_match_format"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="ODI"
            android:textSize="14sp"
            android:textColor="@android:color/white"
            android:background="@android:color/darker_gray"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:paddingTop="4dp"
            android:paddingBottom="4dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/ll_match_title"
            tools:text="T20" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_view_details"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="8dp"
            android:background="@color/button_1"
            android:fontFamily="@font/lato_bold"
            android:text="View Match Info"
            android:textColor="@color/white"
            app:layout_constraintEnd_toStartOf="@id/btn_view_squad"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_match_format" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_view_squad"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="16dp"
            android:background="@color/button_1"
            android:fontFamily="@font/lato_bold"
            android:text="View Squads"
            android:textColor="@color/white"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/btn_view_details"
            app:layout_constraintTop_toBottomOf="@id/ll_match_title" />

        <TextView
            android:id="@+id/tv_match_result"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:gravity="center"
            android:text="India won by 5 wickets"
            android:textSize="20sp"
            android:textStyle="italic"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/btn_view_squad" />

        <!-- Loading Indicator -->
        <ProgressBar
            android:id="@+id/progress_loading"
            style="@android:style/Widget.DeviceDefault.Light.ProgressBar.Large"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>