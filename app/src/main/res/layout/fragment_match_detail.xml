<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context=".MatchDetailFragment">

    <!-- AppBar with collapsing header and tabs -->
    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fitsSystemWindows="true"
        android:background="@android:color/white"
        app:elevation="4dp">

        <com.google.android.material.appbar.CollapsingToolbarLayout
            android:id="@+id/collapsingToolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fitsSystemWindows="true"
            app:contentScrim="@color/design_default_color_primary"
            app:layout_scrollFlags="scroll|exitUntilCollapsed">

            <!-- Full Header (shown when expanded) -->
            <ScrollView
                android:id="@+id/header_full"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fillViewport="true"
                android:background="@android:color/white"
                app:layout_collapseMode="parallax"
                app:layout_collapseParallaxMultiplier="0.5">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp"
                    android:paddingTop="16dp"
                    android:paddingBottom="16dp">

                    <!-- Title and status row -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:paddingBottom="12dp">

                        <TextView
                            android:id="@+id/tv_match_title"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Australia vs South Africa"
                            android:textSize="22sp"
                            android:textStyle="bold"
                            android:textColor="@android:color/black" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:layout_marginStart="8dp">

                            <TextView
                                android:id="@+id/badge_live"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:paddingStart="10dp"
                                android:paddingEnd="10dp"
                                android:paddingTop="6dp"
                                android:paddingBottom="6dp"
                                android:text="LIVE"
                                android:textStyle="bold"
                                android:textColor="@android:color/white"
                                android:backgroundTintMode="src_in"
                                android:background="@drawable/bg_badge_red" />

                            <TextView
                                android:id="@+id/badge_format"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="8dp"
                                android:paddingStart="10dp"
                                android:paddingEnd="10dp"
                                android:paddingTop="6dp"
                                android:paddingBottom="6dp"
                                android:text="ODI"
                                android:textColor="@color/teal_700"
                                android:background="@drawable/bg_badge_light" />
                        </LinearLayout>
                    </LinearLayout>

                    <!-- Series / venue / time row -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:paddingBottom="16dp">

                        <TextView
                            android:id="@+id/tv_series"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="South Africa tour of Australia 2025"
                            android:textColor="@android:color/darker_gray"
                            android:textStyle="bold" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:layout_marginTop="6dp">

                            <TextView
                                android:id="@+id/tv_venue"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Cairns"
                                android:textColor="@android:color/secondary_text_light" />

                            <TextView
                                android:id="@+id/tv_date_time"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Aug 19, 2025 • 14:30 IST"
                                android:textColor="@android:color/secondary_text_light" />
                        </LinearLayout>
                    </LinearLayout>

                    <!-- Team score cards -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:divider="@android:color/transparent"
                        android:showDividers="middle">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:weightSum="2"
                            android:baselineAligned="false">

                            <!-- Team A Card -->
                            <com.google.android.material.card.MaterialCardView
                                android:id="@+id/card_team_a"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:layout_marginEnd="8dp"
                                app:cardUseCompatPadding="true"
                                app:cardElevation="2dp"
                                app:strokeWidth="1dp"
                                app:strokeColor="@android:color/darker_gray">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical"
                                    android:padding="12dp">

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:orientation="horizontal"
                                        android:gravity="center_vertical">

                                        <ImageView
                                            android:id="@+id/img_team_a"
                                            android:layout_width="40dp"
                                            android:layout_height="40dp"
                                            android:scaleType="centerCrop"
                                            android:src="@drawable/ic_team_placeholder"
                                            android:contentDescription="Team A" />

                                        <LinearLayout
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:orientation="vertical"
                                            android:layout_marginStart="8dp">

                                            <TextView
                                                android:id="@+id/tv_team_a_name"
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:text="Australia"
                                                android:textStyle="bold"
                                                android:textColor="@android:color/black" />

                                            <TextView
                                                android:id="@+id/tv_team_a_short"
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:text="AUS"
                                                android:textColor="@android:color/darker_gray" />
                                        </LinearLayout>
                                    </LinearLayout>

                                    <TextView
                                        android:id="@+id/tv_team_a_score"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:gravity="center"
                                        android:text="Yet to bat"
                                        android:textStyle="bold"
                                        android:textSize="22sp"
                                        android:layout_marginTop="8dp" />

                                    <TextView
                                        android:id="@+id/tv_team_a_overs_rr"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:gravity="center"
                                        android:text="Second innings"
                                        android:textColor="@android:color/darker_gray"
                                        android:layout_marginTop="4dp" />
                                </LinearLayout>
                            </com.google.android.material.card.MaterialCardView>

                            <!-- Team B Card -->
                            <com.google.android.material.card.MaterialCardView
                                android:id="@+id/card_team_b"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:layout_marginStart="8dp"
                                app:cardUseCompatPadding="true"
                                app:cardElevation="2dp"
                                app:strokeWidth="1dp"
                                app:strokeColor="@android:color/darker_gray">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical"
                                    android:padding="12dp">

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:orientation="horizontal"
                                        android:gravity="center_vertical">

                                        <ImageView
                                            android:id="@+id/img_team_b"
                                            android:layout_width="40dp"
                                            android:layout_height="40dp"
                                            android:scaleType="centerCrop"
                                            android:src="@drawable/ic_team_placeholder"
                                            android:contentDescription="Team B" />

                                        <LinearLayout
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:orientation="vertical"
                                            android:layout_marginStart="8dp">

                                            <TextView
                                                android:id="@+id/tv_team_b_name"
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:text="South Africa"
                                                android:textStyle="bold"
                                                android:textColor="@android:color/black" />

                                            <TextView
                                                android:id="@+id/tv_team_b_short"
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:text="RSA"
                                                android:textColor="@android:color/darker_gray" />
                                        </LinearLayout>
                                    </LinearLayout>

                                    <TextView
                                        android:id="@+id/tv_team_b_score"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:gravity="center"
                                        android:text="24/0"
                                        android:textStyle="bold"
                                        android:textSize="22sp"
                                        android:layout_marginTop="8dp" />

                                    <TextView
                                        android:id="@+id/tv_team_b_overs_rr"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:gravity="center"
                                        android:text="5.4 overs • RR 4.24"
                                        android:textColor="@android:color/darker_gray"
                                        android:layout_marginTop="4dp" />
                                </LinearLayout>
                            </com.google.android.material.card.MaterialCardView>
                        </LinearLayout>
                    </LinearLayout>

                    <!-- Toss & Conditions -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginTop="12dp">

                        <TextView
                            android:id="@+id/tv_toss"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Australia won the toss and elected to bowl"
                            android:textColor="@android:color/black"
                            android:background="@drawable/bg_info_chip"
                            android:padding="12dp" />

                        <TextView
                            android:id="@+id/tv_conditions"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Pitch: Good batting • Weather: Sunny, 28°C"
                            android:textColor="@android:color/black"
                            android:background="@drawable/bg_info_chip_alt"
                            android:padding="12dp"
                            android:layout_marginTop="8dp" />
                    </LinearLayout>
                </LinearLayout>
            </ScrollView>

            <!-- Mini Header (shown when collapsed; keep simple toolbar-like row) -->
            <LinearLayout
                android:id="@+id/header_mini"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:gravity="center_vertical"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:background="@android:color/white"
                app:layout_collapseMode="pin"
                tools:visibility="visible"
                android:visibility="gone">

                <TextView
                    android:id="@+id/tv_mini_title"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="AUS vs RSA"
                    android:textStyle="bold"
                    android:textColor="@android:color/black" />

                <TextView
                    android:id="@+id/tv_mini_score"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="RSA 24/0 (5.4)"
                    android:textColor="@android:color/holo_green_dark"
                    android:textStyle="bold" />
            </LinearLayout>

        </com.google.android.material.appbar.CollapsingToolbarLayout>

        <com.google.android.material.tabs.TabLayout
            android:id="@+id/tabLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/white"
            app:tabIndicatorFullWidth="false"
            app:tabMode="scrollable"
            app:tabGravity="fill"
            app:tabIndicatorColor="@color/teal_700"
            app:tabSelectedTextColor="@color/teal_700"
            app:tabTextColor="@android:color/darker_gray" />

    </com.google.android.material.appbar.AppBarLayout>

    <!-- Tabs content -->
    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/viewPager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:listitem="@layout/item_placeholder" />

</androidx.coordinatorlayout.widget.CoordinatorLayout>
