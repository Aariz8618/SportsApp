<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Pressed state -->
    <item android:state_pressed="true">
        <layer-list>
            <item>
                <shape android:shape="oval">
                    <gradient
                        android:startColor="@color/primary_dark"
                        android:endColor="@color/primary_color_2"
                        android:angle="135"
                        android:type="linear" />
                </shape>
            </item>
        </layer-list>
    </item>
    <!-- Normal state -->
    <item>
        <layer-list>
            <item>
                <shape android:shape="oval">
                    <gradient
                        android:startColor="@color/fab_gradient_start"
                        android:endColor="@color/fab_gradient_end"
                        android:angle="135"
                        android:type="linear" />
                </shape>
            </item>
        </layer-list>
    </item>
</selector>