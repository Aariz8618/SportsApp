<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Card container with border and radius -->
    <style name="CardContainer">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
        <item name="android:padding">16dp</item>
        <item name="android:layout_marginBottom">12dp</item>
        <item name="android:background">@drawable/gp_card_background</item>
    </style>

    <style name="CardTitle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#2c3e50</item>
        <item name="android:paddingBottom">6dp</item>
    </style>

    <style name="CardBody">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#495057</item>
        <item name="android:paddingTop">2dp</item>
    </style>

    <!-- Tags -->
    <style name="TagBase">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:paddingTop">4dp</item>
        <item name="android:paddingBottom">4dp</item>
        <item name="android:textSize">11sp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:background">@drawable/gp_tag_background</item>
    </style>

    <style name="TagGreen" parent="TagBase">
        <item name="android:backgroundTint">#28a745</item>
    </style>

    <style name="TagOrange" parent="TagBase">
        <item name="android:backgroundTint">#fd7e14</item>
    </style>

    <!-- Records grid item -->
    <style name="RecordItem">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_columnWeight">1</item>
        <item name="android:layout_rowWeight">1</item>
        <item name="android:orientation">vertical</item>
        <item name="android:padding">12dp</item>
        <item name="android:background">@drawable/gp_record_background</item>
        <item name="android:gravity">center_horizontal</item>
    </style>

    <style name="RecordType">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">11sp</item>
        <item name="android:textColor">#6c757d</item>
    </style>

    <style name="RecordValue">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#dc3545</item>
        <item name="android:layout_marginTop">2dp</item>
    </style>

    <style name="RecordDetail">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">11sp</item>
        <item name="android:textColor">#6c757d</item>
        <item name="android:layout_marginTop">2dp</item>
    </style>

    <!-- Wiki styles -->
    <style name="WikiHeader">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">12dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#000000</item>
        <item name="android:background">#eaecf0</item>
    </style>

    <style name="InfoboxTitle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">14sp</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:layout_marginBottom">8dp</item>
    </style>

    <style name="InfoboxRow">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:paddingBottom">4dp</item>
    </style>

    <style name="InfoboxLabel">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#222222</item>
        <item name="android:minWidth">90dp</item>
    </style>

    <style name="InfoboxValue">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#222222</item>
    </style>

    <style name="WikiParagraph">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#222222</item>
        <item name="android:lineSpacingExtra">2dp</item>
        <item name="android:layout_marginTop">6dp</item>
        <item name="android:layout_marginBottom">0dp</item>
    </style>
</resources>
