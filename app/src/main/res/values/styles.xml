<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Custom Button Style -->
    <style name="CustomRoundedButton" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/rounded_button</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:fontFamily">@font/lato_bold</item>
        <item name="android:textSize">17sp</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:drawableEnd">@drawable/ic_arrow</item>

    </style>

    <style name="SpinnerTheme" parent="Theme.AppCompat.Light">
        <item name="android:popupBackground">@color/white</item>
        <item name="android:textColor">@color/text_primary</item>
    </style>

    <style name="StatLabelBox">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">2dp</item>
        <item name="android:padding">6dp</item>
        <item name="android:gravity">center</item>
        <item name="android:background">#DDDDDD</item>
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="StatValueBox">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">2dp</item>
        <item name="android:padding">6dp</item>
        <item name="android:gravity">center</item>
        <item name="android:background">#EEEEEE</item>
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="CustomTabButtonStyle" parent="Widget.MaterialComponents.Button">
        <item name="cornerRadius">24dp</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="iconPadding">8dp</item>
        <item name="iconGravity">textStart</item>
        <!-- Add other common attributes -->
    </style>
</resources>